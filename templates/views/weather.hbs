<!DOCTYPE html>
<html lang="en">

<head>
  {{>headerlink}}
</head>

<body>
   {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
              <div class="main_content">
                  <form class="temp_form">
                      <input type="text" id="cityName" placeholder="Enter City Name" autocomplete="off">
                      <input type="submit" value="search" id="submitBtn">
                  </form>
              </div>
              <div class="tempinfo">
                <div class="top_layer">
                  <p id="day">Wednesday</p>
                  <p id="date">15 Aug</p>
                </div>
                <div class="main_layer">
                  <p id="city_name"> City </p>
                  <div class="middle_layer data_hide">
                    <p ><span id="temp">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fas fa-cloud fa"></i></p>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
 {{>footer}}

 <script src="js/main.js"></script>
 <script> 
   const getCurrentDay =()=>{
    let weekday=new Array(7);
    weekday[0]="Sunday";
    weekday[1]="Monday";
    weekday[2]="Tuesday";
    weekday[3]="Wednesday";
    weekday[4]="Thursday";
    weekday[5]="Friday";
    weekday[6]="Saturday";
    
    let currentTime=new Date();
    let days=weekday[currentTime.getDay()];
    let day=document.getElementById('day');
    day.innerText=days;
   };
   const getDate =()=>{
    let month=new Array(12);
     month["1"]="FEB";
     month["2"]="MAR";
     month["0"]="JAN";
     month["3"]="APR";
     month["4"]="MAY";
     month["5"]="JUN";
     month["6"]="JUL";
     month["7"]="AUG";
     month["8"]="SEP";
     month["9"]="OCT";
     month["10"]="NOV";
     month["11"]="DEC";
     
     let currentMonth=new Date();
     let months=month[currentMonth.getMonth()];
     let d = new Date();

     let dates=d.getDate();
     let current_month=document.getElementById('date');
     current_month.innerText=`${dates} ${months}`;

   }
   getCurrentDay();
   getDate();
 </script>
</body>

</html>